{
  "index_name": "portal-docs",
  "start_urls": [
    "https://portal-docs.bristolsu.org.uk"
  ],
  "sitemap_urls": [
    "https://portal-docs.bristolsu.org.uk/sitemap.xml"
  ],
  "stop_urls": [],
  "selectors": {
    "lvl0": {
      "selector": "//nav[@class='breadcrumbs']/ul/li[1]",
      "type": "xpath",
      "global": true,
      "default_value": "Home"
    },
    "lvl1": {
      "selector": "//nav[@class='breadcrumbs']/ul/li[last() - 1]",
      "type": "xpath",
      "global": true,
      "default_value": ""
    },
    "lvl1": ".doc h1",
    "lvl2": ".doc h2",
    "lvl3": ".doc h3",
    "lvl4": ".doc h4",
    "text": ".doc p, .doc td.content, .doc th.tableblock"
  },
  "custom_settings": {
    "attributesForFaceting": ["language", "version", "component", "module"]
  }
}
